<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="@drawable/activity3"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        app:layout_constraintTop_toBottomOf="@id/tv_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_person_24"
        app:layout_constraintTop_toBottomOf="@id/tv_create"
        android:backgroundTint="@color/white"
        android:hint="Username"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:drawableTint="#172BD5"
        />

    <Spinner
        android:id="@+id/sp_kota"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:entries="@array/kota"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        android:backgroundTint="@color/white"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="20dp"
        >
    </Spinner>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_baseline_mail_24"
        app:layout_constraintTop_toBottomOf="@id/sp_kota"
        android:backgroundTint="@color/white"
        android:hint="Email"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:drawableTint="#172BD5"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawableTint="#172BD5"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        android:hint="Password"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/et_conpassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawableTint="#172BD5"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        android:hint="Password"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SIGN UP"
        app:layout_constraintTop_toBottomOf="@+id/et_conpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="17sp"
        android:textColor="#172BD5"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FFFFFF"
        app:cornerRadius="13dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>